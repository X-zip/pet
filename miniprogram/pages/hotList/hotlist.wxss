.tag-box {
  width: 100%;
  text-align: center;
  margin-top:var(--keyboard_height--);
}

.tag_col {
  height: 120rpx;
  line-height: 120rpx;
}

.tag {
  height: 64rpx;
  line-height: 64rpx;
}

.app-title {
  text-align: center;
}

.main-box {
  margin-top:var(--keyboard_height--);
  width: 100%;
  height:100%;
  padding-bottom: 200rpx;
}

.row1 {
  height: 60rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}


.avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border-width: 4rpx 4rpx 4rpx 4rpx;
  border-color: #929292;
  border-style: solid;
}

.userName {
  color: rgb(91, 120, 173);
  line-height: 60rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: flex-start;
}

.c_time {
  color: #929292;
  font-size: 20rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: flex-end;
}

.ellipsis{
  color: #929292;
  line-height: 60rpx;
}

.title {
  padding: 10rpx 0 10rpx 0;
  line-height:40rpx;
  font-size: 30rpx;
}

.task-img {
  padding: 20rpx 20rpx 20rpx 0;
  width: 300rpx;
}

.action {
  height: 60rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.action .tag {
  font-size: 24rpx;
  line-height:60rpx;
  height: 60rpx;
  color:#929292;
}
.action .watchNum {
  font-size: 24rpx;
  line-height:60rpx;
  height: 60rpx;
  color:#929292;
}

.action .like {
  color: #929292;
  font-size: 24rpx;
  line-height:60rpx;
}
.action .comment {
  color: #929292;
  font-size: 24rpx;
  line-height:60rpx;
}
.collapse-box {
  line-height: 50rpx;
  width:20%;
  left:100rpx;
  top:0;
}

.collapse-item {
  line-height: 50rpx;
  width:20%;
  right:0;
  top:0;
  position:fixed
}

.van-popup--top {
  width:20%;
  left:100rpx;
  top:0;
}

.index-swiper {
    width: 96%;
    margin-left: 2%;
