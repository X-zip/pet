  border-radius: 50rpx;
}

/**index.wxss**/
.select-box {
  box-sizing: border-box;
  padding: 0 20rpx;
}
.inline-select {
  margin-top: 50rpx;
}

.van-tabs__nav {
  width: 100%;
  right: 0;
  position: absolute;
}
.van-tabs__line {
  width: 100%;
  /* margin-top: -50rpx; */
}

.van-tag {
  font-size: 28rpx !important;
  height: 80rpx;
}

.zhiding {
  height: 40rpx !important;
  background-color: var(--tag-danger-color,#ee0a24) !important;
  border-radius: var(--tag-border-radius,2px) !important;
  color: var(--tag-text-color,#fff) !important;
  /* display: inline-flex !important; */
  font-size: 24rpx !important;
}



.scrollView {
    width: 100%;
    /* margin-left: 2%; */
    background-color: white;
    border-radius: 20rpx;
    height: auto;
}

.scrollColor {
    background-color:white;
}
.menu-wrp {
    white-space: nowrap;
}
  
.menu-wrp .on{ 
    color: black;
    width: 100%;
}
  

.menu-img {
    width: 48rpx;
    height: 48rpx;
    display: block;
    margin: 0 auto;
    margin-bottom: 5px;
}

.menu-list {
    width: 16.67%;
    box-sizing: border-box;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    display: inline-block;
  }

.onMenu {
    background-color: #e2f0fe;
    border-radius: 25rpx 25rpx 0 0;
}
  
.menu-desc {
    color: black;
    width: 100%;
    text-align: center;
    display: block;
    font-size: 30rpx;
    font-weight: 600;
}
  
.topnav {
    width: 100%;
    position:fixed;
    z-index:98; 
    top:var(--keyboard_height--);
    background-color: whitesmoke;
    opacity: 0.85;
}
.navColor {
    opacity: 1;
    z-index: 99;
}
  
.nav-main {
    background-color: white;
}
  
.normalnav {
    margin-top: 20rpx;
    width: 96%;
    margin-left: 2%;
}
  
.textNav {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    padding-top: 5rpx;
    padding-bottom: 5rpx;
}


.onBack {
    background-color: rgb(133,156,136);
}

.van-dropdown-menu {
    background-color: inherit !important;
}

.van-tabs__scroll {
