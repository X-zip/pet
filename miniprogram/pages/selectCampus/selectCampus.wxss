/* pages/selectCampus/selectCampus.wxss */

/* =========================
   背景图片样式
   ========================= */
.page-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 0;
    pointer-events: none;
}

/* =========================
   自定义导航栏样式
   ========================= */
.custom-navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    box-sizing: border-box;
}

.navbar-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60rpx !important;
    min-height: 60rpx;
    padding: 0 4%;
    position: relative;
    box-sizing: border-box;
}

.navbar-left {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    gap: 12rpx;
    min-width: 80rpx;
}

.navbar-back-btn {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background: rgba(139, 90, 43, 0.1);
    transition: all 0.3s ease;
}

.navbar-back-btn:active {
    background: rgba(139, 90, 43, 0.2);
    transform: scale(0.95);
}

.navbar-back-icon {
    font-size: 40rpx;
    font-weight: 300;
    color: rgb(139, 90, 43);
    line-height: 1;
    margin-left: -4rpx;
}

.navbar-paw-icon {
    width: 28rpx;
    height: 28rpx;
    filter: brightness(1.4) sepia(1) hue-rotate(25deg) saturate(1.5);
    transform: rotate(-45deg);
}

.navbar-center {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.navbar-right {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    gap: 16rpx;
    min-width: 80rpx;
    justify-content: flex-end;
}

.navbar-title {
    font-size: 30rpx;
    font-weight: 700;
    color: rgb(139, 90, 43);
    letter-spacing: 1rpx;
    line-height: 1.2;
}

.navbar-icon-placeholder {
    width: 24rpx;
    height: 24rpx;
    background: rgba(139, 90, 43, 0.2);
    border-radius: 50%;
}

/* =========================
   页面主体样式
   ========================= */
page {
    height: 100%;
    background-color: rgb(247, 223, 185);
}

.box {
    display: block;
    height: 100%;
    padding: 32rpx 4% 200rpx;
    position: relative;
    z-index: 1;
    min-height: 100vh;
}

/* =========================
   当前选择卡片样式
   ========================= */
.current-select-card {
    background: white;
    border-radius: 32rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.current-select-label {
    font-size: 28rpx;
    color: #666;
    font-weight: 500;
}

.current-select-value {
    font-size: 30rpx;
    color: #333;
    font-weight: 600;
}

/* =========================
   选择器卡片样式
   ========================= */
.select-card {
    background: white;
    border-radius: 32rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
    min-height: 600rpx;
}

.van-tree-select {
    width: 100% !important;
    height: auto !important;
}

/* =========================
   提交按钮样式
   ========================= */
.submit-wrap {
    margin-top: 40rpx;
    padding: 0;
    display: flex;
    justify-content: center;
}

.submit-btn {
    width: 100%;
    max-width: 600rpx;
    background: linear-gradient(135deg, #ff5722 0%, #ff7043 100%);
    color: white;
    font-size: 32rpx;
    font-weight: 600;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    border: none;
    box-shadow: 0 4rpx 12rpx rgba(255, 87, 34, 0.3);
    transition: all 0.3s ease;
}

.submit-btn::after {
    border: none;
}

.submit-btn:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(255, 87, 34, 0.4);
}
