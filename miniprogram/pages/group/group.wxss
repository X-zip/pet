/* pages/group/group.wxss */

/* =========================
   背景图片样式
   ========================= */
.page-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    z-index: 0;
    pointer-events: none;
}

/* =========================
   自定义导航栏样式
   ========================= */
.custom-navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
    /* 减小导航栏高度，通过减小内容区域实现 */
    box-sizing: border-box;
}

.navbar-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 60rpx !important;
    min-height: 60rpx;
    padding: 0 4%;
    position: relative;
    box-sizing: border-box;
}

.navbar-left {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    min-width: 80rpx;
}

.navbar-center {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.navbar-right {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    gap: 16rpx;
    min-width: 80rpx;
    justify-content: flex-end;
}

.navbar-paw-icon {
    width: 28rpx;
    height: 28rpx;
    filter: brightness(1.4) sepia(1) hue-rotate(25deg) saturate(1.5);
    transform: rotate(-45deg);
}

.navbar-title {
    font-size: 30rpx;
    font-weight: 700;
    color: rgb(139, 90, 43);
    letter-spacing: 1rpx;
    line-height: 1.2;
}

.navbar-icon-placeholder {
    width: 24rpx;
    height: 24rpx;
    background: rgba(139, 90, 43, 0.2);
    border-radius: 50%;
}

.main-box {
    width: 100%;
    height:100%;
    padding-bottom: 200rpx;
    position: relative;
    z-index: 1;
}

/* =========================
   拼团页面美化样式
   ========================= */

/* 拼团列表容器 */
.group-list-container {
    padding: 32rpx 4% 40rpx;
    padding-top: 32rpx;
}

/* 拼团卡片 - 最外层容器 */
.pt-card-wrapper {
    position: relative;
    margin: 24rpx 4% 0;
    /* 背景透明或页面统一背景 */
}

/* 顶部时间条（放到最上层，并缩成胶囊） */
.pt-card-time {
    position: absolute;
    /* 把时间条放进挖角区域里，具体数值你可以微调 */
    top: 10rpx;
    left: 2rpx;
    padding: 4rpx 20rpx;
    height: auto;
    width: auto;        /* ✅ 不要再 100%，只包住文字 */
    /* background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(255, 240, 220) 100%); */
    /* border-radius: 999rpx; */
    display: flex;
    align-items: center;
    /* box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05); */
    /* box-sizing: border-box; */
    z-index: 5;         /* ✅ 一定要比白卡 + before 更大 */
}

.pt-card-time-text {
    font-size: 24rpx;
    color: rgb(139, 90, 43);
    font-weight: 600;
    white-space: nowrap;
}

/* 白色主体内容卡 */
.pt-card-body {
    width: 100%;
    background: white;
    border-radius: 32rpx;
    padding: 0;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
    position: relative;
    margin-top: 0;
    overflow: visible;
    z-index: 1;      /* ✅ 白卡层级调低一点 */
    box-sizing: border-box;
}

/* 挖角遮罩 – 仍然盖在白卡上，但低于时间条 */
.pt-card-body::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 220rpx;
    height: 60rpx;
    background: rgb(238, 205, 160);
    border-bottom-right-radius: 60rpx;
    z-index: 2;         /* ✅ 只需要比白卡高 */
    pointer-events: none;
}

/* 内层容器 - 恢复原始布局 */
.pt-card-inner {
    background: transparent; /* 透明，因为外层已经是白色 */
    border-radius: 32rpx; /* 完整圆角 */
    margin-left: 0; /* 恢复左边距，不再留空 */
    padding: 24rpx; /* 统一内边距 */
    display: flex;
    gap: 24rpx;
    min-height: 200rpx; /* 确保有足够高度 */
    position: relative;
    z-index: 0; /* 在遮罩下方，确保内容正常显示 */
}

/* 左侧图片 */
.group-card-image-wrapper {
    flex-shrink: 0;
    width: 200rpx;
    height: 200rpx;
    border-radius: 16rpx; /* 图片圆角 */
    overflow: hidden;
    background: #f5f5f5;
    margin-top: 56rpx; /* 下移，避免被时间条遮挡 */
}

.group-card-image {
    width: 100%;
    height: 100%;
    border-radius: 16rpx;
}

/* 右侧内容 */
.group-card-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    min-width: 0;
}

/* 标题 */
.group-card-title {
    font-size: 30rpx;
    font-weight: 600;
    color: rgb(51, 51, 51);
    line-height: 1.5;
    margin-bottom: 8rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 描述 */
.group-card-desc {
    font-size: 24rpx;
    color: rgb(139, 90, 43);
    opacity: 0.8;
    line-height: 1.6;
    margin-bottom: 8rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 活动标签 */
.group-card-activity-tag {
    display: inline-block;
    padding: 4rpx 12rpx;
    background: rgba(255, 152, 0, 0.12);
    color: rgb(139, 90, 43);
    border: 1rpx solid rgba(255, 152, 0, 0.3);
    border-radius: 4rpx;
    font-size: 22rpx;
    font-weight: 500;
    margin-bottom: 10rpx;
    align-self: flex-start;
}

/* 底部：价格和按钮 */
.group-card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: 8rpx;
}

.group-card-price-wrapper {
    display: flex;
    align-items: baseline;
    gap: 2rpx;
    flex: 1;
}

.group-card-price-symbol {
    font-size: 22rpx;
    color: rgb(139, 90, 43);
    font-weight: 600;
}

.group-card-price {
    font-size: 36rpx;
    color: rgb(139, 90, 43);
    font-weight: 700;
    line-height: 1;
}

.group-card-origin-price {
    font-size: 22rpx;
    color: rgb(139, 90, 43);
    opacity: 0.5;
    text-decoration: line-through;
    margin-left: 8rpx;
}

/* 立即拼团按钮 */
.group-card-button {
    padding: 10rpx 24rpx;
    background: linear-gradient(135deg, rgb(139, 90, 43) 0%, rgb(160, 110, 60) 100%);
    color: white;
    border-radius: 24rpx;
    font-size: 26rpx;
    font-weight: 600;
    border: none;
    box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.3);
    transition: all 0.3s ease;
    min-width: 130rpx;
    text-align: center;
    line-height: 1.2;
    white-space: nowrap;
}

.group-card-button::after {
    border: none;
}

.group-card-button:active {
    transform: scale(0.95);
    box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.4);
}

.group-card-button--disabled {
    background: #e0e0e0 !important;
    color: #999 !important;
    box-shadow: none !important;
}


