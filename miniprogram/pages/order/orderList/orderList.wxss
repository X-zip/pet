page {
  background-color: rgb(247, 223, 185);
  height: 100%;
  width: 100%;
}

.header-wrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.nav-left,
.nav-right {
  width: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-back-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(139, 90, 43, 0.10);
  border: 1rpx solid rgba(139, 90, 43, 0.18);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.12s ease, opacity 0.12s ease;
}

.nav-back-btn:active {
  transform: scale(0.96);
  opacity: 0.85;
}

.nav-back {
  font-size: 42rpx;
  line-height: 1;
  color: rgb(139, 90, 43);
  position: relative;
  top: -2rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 800;
  color: rgb(139, 90, 43);
  letter-spacing: 1rpx;
}

.order-page {
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}

.list-scroll {
  height: calc(100vh - 88rpx);
}

.list-wrap {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 14rpx 0 24rpx;
}

.order-card-item {
  background: rgba(255, 255, 255, 0.96);
  border-radius: 22rpx;
  box-shadow: 0 6rpx 16rpx rgba(139, 90, 43, 0.08);
  padding: 18rpx 16rpx;
  box-sizing: border-box;
}

.item-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.item-top .left {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.source-tag {
  padding: 4rpx 10rpx;
  background: rgba(248, 174, 43, 0.12);
  color: rgb(139, 90, 43);
  border: 1rpx solid rgba(248, 174, 43, 0.3);
  border-radius: 999rpx;
}

.status-text {
  font-size: 24rpx;
  color: rgba(139, 90, 43, 0.82);
  font-weight: 700;
}

.order-no {
  font-size: 22rpx;
  color: rgba(43, 43, 43, 0.65);
}

.item-body {
  display: flex;
  gap: 14rpx;
  align-items: flex-start;
}

.cover {
  border-radius: 14rpx;
  overflow: hidden;
  background: rgba(0,0,0,0.05);
}

.info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.title {
  font-size: 28rpx;
  font-weight: 700;
  color: #2B2B2B;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.meta-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: rgba(43,43,43,0.72);
  font-size: 24rpx;
}

.price {
  color: rgb(139, 90, 43);
  font-weight: 800;
  font-size: 28rpx;
}

.qty {
  color: rgba(43, 43, 43, 0.65);
}

.time {
  color: rgba(43, 43, 43, 0.55);
}

.item-footer {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.pay-amount {
  font-size: 26rpx;
  color: #2B2B2B;
  font-weight: 700;
}

.actions {
  display: flex;
  gap: 12rpx;
}

.action-btn {
  height: 64rpx !important;
  line-height: 64rpx !important;
  padding: 0 18rpx !important;
  border-radius: 999rpx !important;
}

.verify-popup {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.verify-title {
  font-size: 28rpx;
  font-weight: 800;
  color: rgb(139, 90, 43);
}

.verify-code {
  font-size: 32rpx;
  font-weight: 900;
  color: #8B5A2B;
  letter-spacing: 2rpx;
}

.verify-qr {
  width: 220rpx;
  height: 220rpx;
  border-radius: 18rpx;
  background: rgba(0,0,0,0.03);
  display: flex;
  align-items: center;
  justify-content: center;
}

.verify-tip {
  font-size: 24rpx;
  color: rgba(43,43,43,0.65);
  text-align: center;
}

.skeleton-card {
  display: flex;
  gap: 14rpx;
  padding: 14rpx 12rpx;
  border-radius: 18rpx;
  background: rgba(255,255,255,0.8);
  box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.08);
}

.skeleton-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 14rpx;
  background: linear-gradient(90deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.08) 50%, rgba(0,0,0,0.05) 100%);
  background-size: 200% 100%;
  animation: shimmer 1.1s infinite;
}

.skeleton-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.skeleton-line {
  height: 24rpx;
  border-radius: 12rpx;
  background: linear-gradient(90deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.08) 50%, rgba(0,0,0,0.05) 100%);
  background-size: 200% 100%;
  animation: shimmer 1.1s infinite;
}

.skeleton-line--lg {
  width: 70%;
}

.skeleton-line--sm {
  width: 40%;
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

