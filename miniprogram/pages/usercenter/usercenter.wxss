page {
    background-color: rgb(247, 223, 185);
    height: 100%;
    width: 100%;
  }
  
  .header-wrap {
    background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
    position: relative;
  }
  
  .nav-title {
    text-align: center;
    font-size: 36rpx;
    font-weight: 700;
    color: rgb(139, 90, 43);
    letter-spacing: 1rpx;
  }
  
  .content {
    display: block;
    padding: 0 24rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
  }
  
  .card {
    background: rgba(255, 255, 255, 0.96);
    border-radius: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.08);
    box-sizing: border-box;
    width: 100%;
  }
  
  .profile-card,
  .order-card,
  .circle-card,
  .menu-card {
    margin-bottom: 20rpx;
  }
  
  /* ===== profile ===== */
  .profile-card {
    padding: 32rpx 28rpx;
    display: flex;
    align-items: center;
  }
  
  .profile-left {
    flex-shrink: 0;
    margin-right: 24rpx;
  }
  
  .avatar-wrapper {
    position: relative;
    width: 140rpx;
    height: 140rpx;
  }
  
  .avatar-img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 4rpx solid #FFFFFF;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.10);
    display: block;
  }
  
  .progress-ring {
    position: absolute;
    top: -4rpx;
    left: -4rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
    pointer-events: none;
  }
  
  .progress-ring-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: rgba(0, 194, 179, 0.15);
  }
  
  .progress-ring-fill {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    mask: radial-gradient(circle at center, transparent 60rpx, black 61rpx);
    -webkit-mask: radial-gradient(circle at center, transparent 60rpx, black 61rpx);
  }
  
  .profile-center {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .user-name {
    margin-bottom: 12rpx;
  }
  
  .user-name text {
    color: rgb(139, 90, 43);
    font-size: 36rpx;
    font-weight: 800;
    line-height: 1.4;
  }
  
  .user-status {
    display: flex;
    align-items: center;
    gap: 8rpx;
  }
  
  .status-dot {
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background: rgba(248, 174, 43, 0.95);
    flex-shrink: 0;
  }
  
  .status-text {
    font-size: 26rpx;
    color: rgba(139, 90, 43, 0.75);
    line-height: 1.4;
  }
  
  .profile-right {
    flex-shrink: 0;
    margin-left: 16rpx;
  }
  
  .edit-btn {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    background: rgba(139, 90, 43, 0.10);
    border: 1rpx solid rgba(139, 90, 43, 0.18);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.06);
  }
  
  /* ===== order ===== */
  .order-card {
    padding: 22rpx 18rpx 18rpx;
  }
  
  .order-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 8rpx 10rpx;
  }
  
  .order-title {
    font-size: 30rpx;
    font-weight: 800;
    color: rgb(139, 90, 43);
  }
  
  .order-more {
    display: flex;
    align-items: center;
    gap: 6rpx;
    font-size: 24rpx;
    color: rgba(43, 43, 43, 0.65);
  }
  
  .order-grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16rpx;
    padding: 6rpx 4rpx 4rpx;
  }
  
  .order-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 14rpx 0 10rpx;
    border-radius: 18rpx;
  }
  
  .order-item:active {
    opacity: 0.85;
    transform: scale(0.985);
  }
  
  .order-icon {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    background: rgba(139, 90, 43, 0.10);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10rpx;
  }
  
  .order-text {
    font-size: 24rpx;
    color: rgba(139, 90, 43, 0.78);
    font-weight: 600;
  }
  
  /* ===== circle ===== */
  .circle-card {
    padding: 22rpx 18rpx 18rpx;
  }
  
  .circle-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 8rpx 10rpx;
  }
  
  .circle-title {
    font-size: 30rpx;
    font-weight: 800;
    color: rgb(139, 90, 43);
  }
  
  .circle-grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 10rpx;
    padding: 6rpx 4rpx 4rpx;
  }
  
  .circle-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 12rpx 0 10rpx;
    border-radius: 18rpx;
  }
  
  .circle-item:active {
    opacity: 0.85;
    transform: scale(0.985);
  }
  
  .circle-icon {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    background: rgba(139, 90, 43, 0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10rpx;
  }
  
  .circle-text {
    font-size: 24rpx;
    color: rgba(139, 90, 43, 0.78);
    font-weight: 600;
  }
  
  /* ===== menu ===== */
  .menu-card {
    padding: 0;
    overflow: hidden;
  }
  
  .menu-cell-group {
    margin: 0 !important;
    border-radius: 0 !important;
    overflow: hidden;
    background: transparent !important;
  }
  
  .menu-cell {
    height: 108rpx !important;
    padding-left: 24rpx !important;
    padding-right: 24rpx !important;
  }
  
  .menu-cell:active {
    background-color: rgba(0, 0, 0, 0.02) !important;
  }
  
  .menu-cell .van-cell__title {
    font-size: 28rpx;
    color: rgb(139, 90, 43);
    font-weight: 500;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 50rpx;
    position: relative;
    top: -1rpx;
  }
  
  .menu-cell .van-cell__left-icon-wrap {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    top: -1rpx;
  }
  
  .menu-cell .van-cell__left-icon {
    width: 48rpx;
    height: 48rpx;
    opacity: 0.8;
  }
  
  .menu-cell:not(:last-child)::after {
    border-color: rgba(0, 0, 0, 0.06) !important;
    left: 24rpx !important;
    right: 24rpx !important;
  }
  
  .menu-cell:last-child::after {
    display: none !important;
  }


  /* ===== 圈子卡片（新增） ===== */
.circle-card {
    padding: 22rpx 18rpx 18rpx;
    display: flex;
    flex-direction: column;
    gap: 14rpx;
    margin-bottom: 20rpx;
  }
  
  .circle-head {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .circle-title {
    font-size: 30rpx;
    font-weight: 800;
    color: rgb(139, 90, 43);
  }
  
  .circle-grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16rpx;
  }
  
  .circle-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: transform 0.12s ease, opacity 0.12s ease;
  }
  
  .circle-item:active {
    transform: scale(0.985);
    opacity: 0.85;
  }
  
  .circle-icon {
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    background: rgba(139, 90, 43, 0.10);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 12rpx;
  }
  
  .circle-text {
    font-size: 24rpx;
    color: rgba(139, 90, 43, 0.75);
    font-weight: 600;
    text-align: center;
    line-height: 1.4;
  }
  
  