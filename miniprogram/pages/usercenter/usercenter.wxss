page {
  /* 与 index / service 统一的暖色背景 */
  background-color: rgb(247, 223, 185);
  height: 100%;
  width: 100%;
}
  
  .container {
    background-color: rgb(247, 223, 185);
    width: 100%;
  }
  
  /* ===== 顶部导航栏（渐变背景） ===== */
  .header-wrap {
    background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
    position: relative;
  }
  
  .nav-title {
    text-align: center;
    font-size: 36rpx;
    font-weight: 700;
    color: rgb(139, 90, 43);
    letter-spacing: 1rpx;
  }
  
  .content {
    display: block;
    padding: 0 24rpx;
    padding-top: 20rpx;
    box-sizing: border-box;
  }
  
  /* ===== 统一卡片规范 ===== */
  .card {
    background: rgba(255, 255, 255, 0.96);
    border-radius: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.08);
    box-sizing: border-box;
    width: 100%;
    transition: transform 0.15s ease, box-shadow 0.15s ease;
  }
  
  .card:active {
    transform: scale(0.99);
    box-shadow: 0 3rpx 10rpx rgba(139, 90, 43, 0.06);
  }
  
  /* 上三块卡片间距（内容区更紧） */
  .profile-card,
  .stats-card,
  .quick-actions-card {
    margin-bottom: 18rpx;
  }
  
  /* 底部菜单卡间距（功能区更松） */
  .menu-card {
    margin-bottom: 30rpx;
  }
  
  /* ===== 个人信息卡片 ===== */
  .profile-card {
    padding: 32rpx 28rpx;
    display: flex;
    align-items: center;
  }
  
  .profile-left {
    flex-shrink: 0;
    margin-right: 24rpx;
  }
  
  .avatar-wrapper {
    position: relative;
    width: 140rpx;
    height: 140rpx;
  }
  
  .avatar-img {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 4rpx solid #FFFFFF;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
    display: block;
    transition: transform 0.15s ease;
  }
  
  .avatar-img:active {
    transform: scale(0.98);
  }
  
  .progress-ring {
    position: absolute;
    top: -4rpx;
    left: -4rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
  }
  
  .progress-ring-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: rgba(0, 194, 179, 0.15);
  }
  
  .progress-ring-fill {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    mask: radial-gradient(circle at center, transparent 60rpx, black 61rpx);
    -webkit-mask: radial-gradient(circle at center, transparent 60rpx, black 61rpx);
  }
  
  .profile-center {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .user-name {
    margin-bottom: 12rpx;
    transition: opacity 0.15s ease;
  }
  
  .user-name:active {
    opacity: 0.7;
  }
  
  .user-name text {
    color: rgb(139, 90, 43);
    font-size: 36rpx;
    font-weight: 800;
    line-height: 1.4;
  }
  
  .user-status {
    display: flex;
    align-items: center;
    gap: 8rpx;
  }
  
  .status-dot {
    width: 8rpx;
    height: 8rpx;
    border-radius: 50%;
    background: rgba(248, 174, 43, 0.95);
    flex-shrink: 0;
  }
  
  .status-text {
    font-size: 26rpx;
    color: rgba(139, 90, 43, 0.75);
    line-height: 1.4;
  }
  
  .profile-right {
    flex-shrink: 0;
    margin-left: 16rpx;
  }
  
  .edit-btn {
    width: 56rpx;
    height: 56rpx;
    border-radius: 50%;
    background: rgba(139, 90, 43, 0.10);
    border: 1rpx solid rgba(139, 90, 43, 0.18);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.06);
  }
  
  .edit-btn:active {
    background: rgba(139, 90, 43, 0.16);
    transform: scale(0.95);
    box-shadow: 0 1rpx 4rpx rgba(139, 90, 43, 0.08);
  }
  
  .edit-icon {
    font-size: 28rpx;
    opacity: 0.7;
  }
  
  /* ===== 数据统计条 ===== */
  .stats-card {
    padding: 32rpx 28rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }
  
  .stat-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: opacity 0.15s ease;
  }
  
  .stat-item:active {
    opacity: 0.7;
  }
  
  .stat-item:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 1rpx;
    height: 60%;
    background: rgba(0, 0, 0, 0.06);
  }
  
  .stat-number {
    font-size: 34rpx;
    font-weight: 800;
    color: rgb(139, 90, 43);
    margin-bottom: 8rpx;
    line-height: 1.2;
  }
  
  .stat-label {
    font-size: 22rpx;
    color: rgba(139, 90, 43, 0.55);
    line-height: 1.4;
  }
  
  .boost-btn {
    margin-left: 24rpx;
    padding: 14rpx 28rpx;
    background: linear-gradient(135deg, rgb(139, 90, 43) 0%, rgb(193, 142, 86) 100%);
    border-radius: 40rpx;
    box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.22);
    transition: all 0.2s ease;
  }
  
  .boost-btn:active {
    transform: scale(0.97);
    box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.18);
  }
  
  .boost-text {
    font-size: 24rpx;
    color: #FFFFFF;
    font-weight: 600;
    white-space: nowrap;
  }
  
  /* ===== 快捷入口卡片 ===== */
  .quick-actions-card {
    padding: 32rpx 24rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  
  .quick-action {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
    transition: transform 0.15s ease, opacity 0.15s ease;
  }
  
  .quick-action:active {
    transform: scale(0.97);
    opacity: 0.8;
  }
  
  .action-icon {
    width: 56rpx;
    height: 56rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16rpx;
    filter: saturate(0.85);
    transition: filter 0.15s ease;
  }
  
  .quick-action:active .action-icon {
    filter: saturate(0.7);
  }
  
  .action-text {
    font-size: 27rpx;
    color: rgba(139, 90, 43, 0.75);
    font-weight: 500;
    text-align: center;
    line-height: 1.4;
  }
  
  /* ===== 切换学校按钮卡片 ===== */
  .campus-switch-card {
    background: rgba(255, 255, 255, 0.96);
    border-radius: 24rpx;
    padding: 24rpx;
    margin-bottom: 18rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.06);
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
  }
  
  .campus-btn {
    width: 100%;
  }
  
  /* ===== 功能列表卡片 ===== */
  .menu-card {
    padding: 0;
    overflow: hidden;
  }
  
  .menu-cell-group {
    margin: 0 !important;
    border-radius: 0 !important;
    overflow: hidden;
    background: transparent !important;
  }
  
  .menu-cell-group .van-cell-group {
    margin: 0 !important;
    border-radius: 0 !important;
    background: transparent !important;
  }
  
  .menu-cell-group .van-cell-group--inset {
    margin: 0 !important;
    border-radius: 0 !important;
    background: transparent !important;
  }
  
  .menu-cell {
    height: 108rpx !important;
    padding-left: 24rpx !important;
    padding-right: 24rpx !important;
    transition: background-color 0.15s ease;
  }
  
  .menu-cell:active {
    background-color: rgba(0, 0, 0, 0.02) !important;
  }
  
  .menu-cell .van-cell__title {
    font-size: 28rpx;
    color: rgb(139, 90, 43);
    font-weight: 500;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 50rpx;
    position: relative;
    top: -1rpx;
  }
  
  .menu-cell .van-cell__left-icon-wrap {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    top: -1rpx;
  }
  
  .menu-cell .van-cell__left-icon {
    width: 48rpx;
    height: 48rpx;
    opacity: 0.8;
  }
  
  .menu-cell .van-cell__right-icon-wrap {
    height: auto;
  }
  
  .menu-cell:not(:last-child)::after {
    border-color: rgba(0, 0, 0, 0.06) !important;
    left: 24rpx !important;
    right: 24rpx !important;
  }
  
  .menu-cell:last-child::after {
    display: none !important;
  }
  
  /* 在线客服透明按钮 */
  .kefuButton {
    border: none !important;
    border-color: transparent !important;
    background-color: transparent !important;
    color: transparent !important;
    position: absolute !important;
    top: 0 !important;
    right: 0 !important;
    width: 100% !important;
    height: 100% !important;
  }
  
