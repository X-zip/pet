<van-toast id="van-toast" />

<view class="header-wrap" style="height: {{navH*2+20}}px;">
  <view class="nav-title" style="line-height: {{navH*2+44}}px;">我的</view>
</view>

<view class="content">
  <!-- 个人信息卡片 -->
  <view class="card profile-card">
    <view class="profile-left">
      <view class="avatar-wrapper">
        <image class="avatar-img" src="{{avatar+'?imageView2/2/w/100'}}" bindtap="navLogin"></image>

        <view class="progress-ring">
          <view class="progress-ring-bg"></view>
          <view class="progress-ring-fill"
            style="background: conic-gradient(from 0deg, rgb(139, 90, 43) 0deg 90deg, rgba(139, 90, 43, 0.18) 90deg 360deg);">
          </view>
        </view>
      </view>
    </view>

    <view class="profile-center">
      <view class="user-name" bindtap="navLogin">
        <text>{{userName || '微信用户'}}</text>
      </view>
      <view class="user-status">
        <view class="status-dot"></view>
        <text class="status-text">未完善资料</text>
      </view>
    </view>

    <view class="profile-right">
      <view class="edit-btn" bindtap="navLogin">
        <van-icon name="edit" size="32rpx" color="rgb(139, 90, 43)" />
      </view>
    </view>
  </view>

  <!-- 我的订单（保留这一块，删除上面那种统计条） -->
  <view class="card order-card">
    <view class="order-head">
      <view class="order-title">我的订单</view>
      <view class="order-more" bindtap="toOrderListAll">
        <text>查看全部</text>
        <text class="arrow">›</text>
      </view>
    </view>

    <view class="order-grid">
      <view class="order-item" bindtap="toOrderListPending">
        <view class="order-icon">
          <van-icon name="balance-o" size="44rpx" color="rgb(139, 90, 43)" />
        </view>
        <view class="order-text">待支付</view>
      </view>

      <view class="order-item" bindtap="toOrderVerify">
        <view class="order-icon">
          <van-icon name="qr" size="44rpx" color="rgb(139, 90, 43)" />
        </view>
        <view class="order-text">待核销</view>
      </view>

      <view class="order-item" bindtap="toAfterSale">
        <view class="order-icon">
          <van-icon name="after-sale" size="44rpx" color="rgb(139, 90, 43)" />
        </view>
        <view class="order-text">售后/退款</view>
      </view>
    </view>
  </view>

  <!-- 圈子入口（必须保留，不然圈子功能没入口） -->
  <view class="card circle-card">
    <view class="circle-head">
      <view class="circle-title">圈子</view>
    </view>

    <view class="circle-grid">
      <view class="circle-item" bindtap="toMytask">
        <view class="circle-icon">
          <van-image width="48rpx" height="48rpx" fit="contain" src="https://imgbf.yqtech.ltd/campusIcon/post.png" />
        </view>
        <view class="circle-text">我发布的</view>
      </view>

      <view class="circle-item" bindtap="toMylike">
        <view class="circle-icon">
          <van-image width="48rpx" height="48rpx" fit="contain" src="https://imgbf.yqtech.ltd/campusIcon/like.png" />
        </view>
        <view class="circle-text">我喜欢的</view>
      </view>

      <view class="circle-item" bindtap="toComment">
        <view class="circle-icon">
          <van-image width="48rpx" height="48rpx" fit="contain" src="https://imgbf.yqtech.ltd/campusIcon/comment.png" />
        </view>
        <view class="circle-text">我评论的</view>
      </view>

      <view class="circle-item" bindtap="toReply">
        <view class="circle-icon">
          <van-image width="48rpx" height="48rpx" fit="contain" src="https://imgbf.yqtech.ltd/campusIcon/reply.png" />
        </view>
        <view class="circle-text">我的回复</view>
      </view>
    </view>
  </view>

  <!-- 功能列表 -->
  <view class="card menu-card">
    <van-cell-group custom-class="menu-cell-group">
      <van-cell title="联系我们" is-link clickable icon="https://imgbf.yqtech.ltd/campusIcon/contact.png"
        bind:click="toContact" custom-class="menu-cell" />
      <van-cell title="意见反馈" is-link clickable icon="https://imgbf.yqtech.ltd/campusIcon/feedback.png"
        bind:click="toSuggestion" custom-class="menu-cell" />
      <van-cell title="在线客服" is-link clickable icon="https://imgbf.yqtech.ltd/campusIcon/kefu.png"
        open-type="contact" custom-class="menu-cell" />
    </van-cell-group>
  </view>
</view>
