/* pages/serviceCategory/serviceCategory.wxss */

.service-page {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(180deg, #fdf1d6 0%, #f7dfb9 60%, #f3d7a8 100%);
  position: relative;
}

.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx !important;
  min-height: 60rpx;
  padding: 0 4%;
  position: relative;
  box-sizing: border-box;
}

.navbar-left {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  min-width: 80rpx;
}

.navbar-back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 90, 43, 0.1);
  transition: all 0.3s ease;
}

.navbar-back-btn:active {
  background: rgba(139, 90, 43, 0.2);
  transform: scale(0.95);
}

.navbar-back-icon {
  font-size: 40rpx;
  font-weight: 300;
  color: rgb(139, 90, 43);
  line-height: 1;
  margin-left: -4rpx;
}

.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.navbar-title {
  font-size: 30rpx;
  font-weight: 700;
  color: rgb(139, 90, 43);
  letter-spacing: 1rpx;
  line-height: 1.2;
}

.navbar-right {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 80rpx;
  justify-content: flex-end;
}

.service-scroll {
  width: 100%;
  height: calc(100vh - 48px);
  box-sizing: border-box;
}

.service-body {
  padding: 0 20rpx 60rpx;
}

.section-header {
  margin: 14rpx 0 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 8rpx;
}

.section-sub {
  font-size: 24rpx;
  color: rgba(43,43,43,0.72);
}

.chip-row {
  display: flex;
  gap: 14rpx;
  padding: 0 8rpx 14rpx;
}

.chip-filter {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255,255,255,0.7);
  border: 1rpx solid rgba(139,90,43,0.10);
  color: rgba(43,43,43,0.8);
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.04);
}

.chip-filter--active {
  background: linear-gradient(135deg, #F8AE2B 0%, #F59E0B 100%);
  color: #fff;
  border: 1rpx solid rgba(248, 174, 43, 0.6);
  box-shadow: 0 8rpx 16rpx rgba(245, 158, 11, 0.18);
}

.service-list {
  padding: 6rpx 0 40rpx;
  background: rgba(255,255,255,0.78);
  border-radius: 26rpx;
  box-shadow: 0 10rpx 26rpx rgba(139, 90, 43, 0.10);
}

.service-list-header {
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 700;
  color: rgb(139, 90, 43);
}

.service-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.service-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.12);
}

.service-card-content {
  display: flex;
  padding: 24rpx;
  gap: 24rpx;
}

.service-card-image {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(139, 90, 43, 0.05);
}

.service-image {
  width: 100%;
  height: 100%;
  display: block;
}

.service-card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  min-width: 0;
}

.service-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2B2B2B;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.service-desc {
  font-size: 24rpx;
  color: rgba(43, 43, 43, 0.75);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.service-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.service-price {
  color: rgb(139, 90, 43);
  font-size: 26rpx;
  font-weight: 800;
}

.price-text {
  font-size: 28rpx;
  font-weight: 800;
}

.service-distance {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(43, 43, 43, 0.65);
  font-size: 24rpx;
}

.distance-text {
  color: rgba(43, 43, 43, 0.65);
}

.skeleton-card {
  pointer-events: none;
}

.skeleton-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  background: linear-gradient(90deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.08) 50%, rgba(0,0,0,0.05) 100%);
  background-size: 200% 100%;
  animation: shimmer 1.2s infinite;
}

.skeleton-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.skeleton-line {
  height: 24rpx;
  border-radius: 12rpx;
  background: linear-gradient(90deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.08) 50%, rgba(0,0,0,0.05) 100%);
  background-size: 200% 100%;
  animation: shimmer 1.2s infinite;
}

.skeleton-line--lg {
  width: 70%;
}

.skeleton-footer {
  margin-top: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.skeleton-pill {
  width: 120rpx;
  height: 28rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, rgba(0,0,0,0.05) 0%, rgba(0,0,0,0.08) 50%, rgba(0,0,0,0.05) 100%);
  background-size: 200% 100%;
  animation: shimmer 1.2s infinite;
}

.skeleton-pill--sm {
  width: 90rpx;
}

.empty-wrap {
  padding: 80rpx 0;
  display: flex;
  justify-content: center;
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}
.empty-wrap {
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
}

