page {
    height: 100vh;
}

.container {
    background-color: #f2f2f2;
    width: 100%;
    padding-bottom: 200rpx;
}
.btn-area {
    display: flex;
    justify-content: center;
    margin-top: 50rpx;
}

.btn-area .btn {
width: 200rpx;
}
.address-box {
    width:90%;
    margin-left: 5%;
    height: 300rpx;
    background-color: white;
    border-radius: 20rpx;
    margin-top: 20rpx;
}

.address {
    display: flex;
    flex-direction: row;
    justify-content:flex-start;
    height: 150rpx;
    align-items: center;
}
.address .get {
    border-radius: 50%;
    width: 80rpx;
    height: 80rpx;
    color: white;
    background-color: black;
    align-items: center;
    text-align: center;
    justify-content: center;
    line-height: 80rpx;
    font-size: 40rpx;
    font-weight: 550;
    margin-left: 50rpx;
}

.address .send {
    border-radius: 50%;
    width: 80rpx;
    height: 80rpx;
    color: white;
    background-color:blueviolet;
    align-items: center;
    text-align: center;
    justify-content: center;
    line-height: 80rpx;
    font-size: 40rpx;
    font-weight: 550;
    margin-left: 50rpx;
}

.address .text {
    font-size: 32rpx;
    font-weight: 500;
    margin-left: 20rpx;
}
.address .image-box {
    align-items: center;
    display: flex;
}
.address .image {
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    right: 8%;
}

.detail-box {
    width:90%;
    margin-left: 5%;
    background-color: white;
    border-radius: 20rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    margin-top: 20rpx;
}

.van-field-box {
    font-weight: 600;
}

.van-cell-box {
    font-weight: 600;
}

.van-checkbox-box{
    display: flex;
    font-size: 20rpx;
    margin-left: 5%;
}

.van-uploader-box{
    display: flex;
    justify-content: center;
}

.submit {
    margin-top: 20rpx;
    border-radius: 20rpx;
    background-color: mediumpurple;
    color: white;
}

.tag_col {
    height: 100rpx;
    line-height: 120rpx;
    padding: 0 0 0 10rpx;
}
.tag {
    height: 48rpx;
    line-height: 48rpx;
}
  
