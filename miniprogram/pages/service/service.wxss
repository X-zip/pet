/* pages/service/service.wxss */

/* =========================
   页面整体样式
   ========================= */
.service-page {
  width: 100%;
  min-height: 100vh;
  background-color: rgb(247, 223, 185);
  position: relative;
}

/* =========================
   自定义导航栏样式（与首页一致）
   ========================= */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx !important;
  min-height: 60rpx;
  padding: 0 4%;
  position: relative;
  box-sizing: border-box;
}

.navbar-left {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  min-width: 80rpx;
}

.navbar-back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 90, 43, 0.1);
  transition: all 0.3s ease;
}

.navbar-back-btn:active {
  background: rgba(139, 90, 43, 0.2);
  transform: scale(0.95);
}

.navbar-back-icon {
  font-size: 40rpx;
  font-weight: 300;
  color: rgb(139, 90, 43);
  line-height: 1;
  margin-left: -4rpx;
}

.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.navbar-title {
  font-size: 30rpx;
  font-weight: 700;
  color: rgb(139, 90, 43);
  letter-spacing: 1rpx;
  line-height: 1.2;
}

.navbar-right {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 80rpx;
  justify-content: flex-end;
}

/* =========================
   滚动区域
   ========================= */
.service-scroll {
  width: 100%;
  height: calc(100vh - 48px);
  box-sizing: border-box;
}

/* =========================
   Banner 区域
   ========================= */
.service-banner-wrapper {
  position: relative;
  width: 100%;
  height: 400rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.service-banner {
  width: 100%;
  height: 100%;
  display: block;
}

.banner-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 32rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.4) 0%, transparent 100%);
  color: #ffffff;
}

.banner-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.banner-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.3);
}

/* =========================
   功能宫格区域
   ========================= */
.service-feature-grid {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  margin: 0 20rpx 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.08);
}

.feature-col {
  margin-bottom: 32rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 8rpx;
  transition: all 0.2s ease;
}

.feature-item:active {
  transform: scale(0.95);
}

.feature-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 152, 0, 0.12);
  border-radius: 20rpx;
  margin-bottom: 12rpx;
  transition: all 0.2s ease;
}

.feature-icon {
  width: 56rpx;
  height: 56rpx;
  display: block;
}

.feature-item:active .feature-icon-wrapper {
  background: rgba(255, 152, 0, 0.2);
}

.feature-name {
  font-size: 24rpx;
  color: rgb(139, 90, 43);
  font-weight: 500;
  text-align: center;
}

/* =========================
   服务列表区域
   ========================= */
.service-list {
  padding: 0 20rpx 40rpx;
}

.service-list-header {
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: 700;
  color: rgb(139, 90, 43);
}

/* =========================
   服务卡片样式
   ========================= */
.service-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(139, 90, 43, 0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.service-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(139, 90, 43, 0.12);
}

.service-card-content {
  display: flex;
  padding: 24rpx;
  gap: 24rpx;
}

.service-card-image {
  flex-shrink: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: rgba(139, 90, 43, 0.05);
}

.service-image {
  width: 100%;
  height: 100%;
  display: block;
}

.service-card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.service-title {
  font-size: 32rpx;
  font-weight: 700;
  color: rgb(51, 51, 51);
  margin-bottom: 12rpx;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.service-desc {
  font-size: 26rpx;
  color: rgb(139, 90, 43);
  opacity: 0.7;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.service-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.service-price {
  display: flex;
  align-items: baseline;
}

.price-text {
  font-size: 32rpx;
  font-weight: 700;
  color: rgb(255, 87, 34);
  line-height: 1;
}

.service-distance {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.distance-text {
  font-size: 24rpx;
  color: rgb(139, 90, 43);
  opacity: 0.6;
}





