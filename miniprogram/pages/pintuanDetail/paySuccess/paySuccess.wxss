/* pages/pintuanDetail/paySuccess/paySuccess.wxss */

/* 背景图片 */
.page-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 0;
  pointer-events: none;
  opacity: 0.10;
}

page{
  --card: rgba(255,255,255,0.96);
  --text: #2B2B2B;
  --muted: rgba(139,90,43,0.65);
  --brand: rgb(139, 90, 43);
  --border: rgba(139,90,43,0.10);
  --shadow: 0 6rpx 18rpx rgba(139,90,43,0.10);
  --radius: 28rpx;
}

/* 自定义导航栏，与确认订单页保持一致 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  background: linear-gradient(135deg, rgb(255, 248, 235) 0%, rgb(247, 223, 185) 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60rpx !important;
  min-height: 60rpx;
  padding: 0 4%;
  position: relative;
  box-sizing: border-box;
}

.navbar-left {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  gap: 12rpx;
  min-width: 80rpx;
}

.navbar-back-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(139, 90, 43, 0.1);
}

.navbar-back-icon {
  font-size: 40rpx;
  font-weight: 300;
  color: rgb(139, 90, 43);
  line-height: 1;
  margin-left: -4rpx;
}

.navbar-paw-icon {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(1.4) sepia(1) hue-rotate(25deg) saturate(1.5);
  transform: rotate(-45deg);
}

.navbar-center {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}

.navbar-title {
  font-size: 30rpx;
  font-weight: 700;
  color: rgb(139, 90, 43);
  letter-spacing: 1rpx;
  line-height: 1.2;
}

.navbar-right {
  flex: 0 0 auto;
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 80rpx;
  justify-content: flex-end;
}

.navbar-icon-placeholder {
  width: 24rpx;
  height: 24rpx;
  background: rgba(139, 90, 43, 0.2);
  border-radius: 50%;
}

/* 页面主容器 */
.page{
  background: linear-gradient(180deg, #fbe6b3 0%, #f7dfb9 65%, #f7dfb9 100%);
  min-height: 100vh;
  padding: 28rpx 4% calc(env(safe-area-inset-bottom) + 48rpx);
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

.card{
  background: var(--card);
  border-radius: var(--radius);
  box-shadow: var(--shadow);
  padding: 34rpx 28rpx;
  border: 1rpx solid var(--border);
}

.success-card{
  margin-top: 18rpx;
}

.success-icon{
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  background: linear-gradient(135deg, #F8AE2B 0%, #F59E0B 100%);
  color: #fff;
  font-size: 64rpx;
  font-weight: 900;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 10rpx auto 16rpx;
  box-shadow: 0 12rpx 24rpx rgba(245, 158, 11, 0.24);
}

.success-title{
  text-align: center;
  font-size: 34rpx;
  font-weight: 800;
  color: var(--text);
}

.success-sub{
  text-align: center;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: var(--muted);
}

.info-table{
  margin-top: 26rpx;
  border-radius: 22rpx;
  background: rgba(255,255,255,0.78);
  border: 1rpx solid var(--border);
  overflow: hidden;
}

.info-row{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 18rpx;
  border-bottom: 1rpx solid rgba(139,90,43,0.08);
}

.info-row:last-child{
  border-bottom: none;
}

.info-k{
  font-size: 26rpx;
  color: rgba(43,43,43,0.72);
  font-weight: 600;
}

.info-v{
  font-size: 26rpx;
  color: var(--text);
  font-weight: 800;
}

.verify-card{
  margin-top: 24rpx;
  padding: 22rpx 18rpx;
  border-radius: 22rpx;
  background: rgba(255,255,255,0.9);
  border: 1rpx solid var(--border);
  box-shadow: 0 8rpx 18rpx rgba(139,90,43,0.10);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.verify-title{
  font-size: 26rpx;
  color: rgba(43,43,43,0.8);
  font-weight: 700;
}

.verify-code{
  font-size: 32rpx;
  font-weight: 900;
  color: #8B5A2B;
  letter-spacing: 2rpx;
}

.verify-qr{
  width: 220rpx;
  height: 220rpx;
  padding: 12rpx;
  border-radius: 18rpx;
  background: rgba(0,0,0,0.03);
  box-sizing: border-box;
}

.verify-qr-img{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #fff;
}

.verify-tip{
  font-size: 24rpx;
  color: rgba(43,43,43,0.65);
  text-align: center;
}

.btn-row{
  display: flex;
  gap: 16rpx;
  margin-top: 26rpx;
}

.btn{
  flex: 1;
  height: 84rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 800;
  padding: 0;
}

.btn::after{ border: none; }

.btn-ghost{
  background: rgba(139,90,43,0.08);
  color: rgb(139, 90, 43);
}

.btn-primary{
  background: linear-gradient(135deg, #F8AE2B 0%, #F59E0B 100%);
  color: #fff;
  box-shadow: 0 12rpx 24rpx rgba(245, 158, 11, 0.22);
}

