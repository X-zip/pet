.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  line-height: 1.2;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1px solid rgba(139, 90, 43, 0.1);
  backdrop-filter: blur(10rpx);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.tab-bar-item .image {
  width: 27px;
  height: 27px;
}
.bulge {
  background-color: rgba(255, 255, 255, 0.95);
}
.bulge .tab-bar-bulge {
  position: absolute;
  z-index: -1;
  top: -10px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  border-top: 1px solid rgba(139, 90, 43, 0.1);
  background-color: rgba(255, 255, 255, 0.95);
}
.bulge .image{
  position: absolute;
  width: 45px;
  height: 45px;
  top: -12px;
  padding-top: 10px;
}

.tab-bar-item .tab-bar-view {
  font-size: 10px;
}


.red-dot {
    position: absolute;
    top: -2px;
    right: 22px; /* 根据 icon 位置微调，通常 icon 是 27px 宽 */
    width: 8px;
    height: 8px;
    background-color: red;
    border-radius: 50%;
    z-index: 9;
}
